{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "wdio debug",
			"request": "launch",
			"type": "node",
			"port": 5252,
			"program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
			"args": ["./src/config/wdio.config.ts", "--spec", "./specs/test.spec.ts"],
			"autoAttachChildProcesses": true,
			"env": {
				"DEBUG": "1"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
